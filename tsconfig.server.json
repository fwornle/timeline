{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "rootDir": "./src",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    "src/data/types/*.ts",
    "src/data/parsers/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/data/services/GitRepositoryService.ts",
    "src/data/services/SpecRepositoryService.ts",
    "src/data/services/GitService.ts",
    "src/data/services/SpecStoryService.ts"
  ]
}